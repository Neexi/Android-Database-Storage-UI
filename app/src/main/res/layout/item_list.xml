<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/item_min_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemId1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/item_id_layout_weight"
        android:gravity="center"
        android:padding="@dimen/table_padding_default" />

    <TextView
        android:id="@+id/itemName1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/item_name_layout_weight"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="@integer/item_name_max_length"
        android:maxLines="@integer/item_name_max_line"
        android:padding="@dimen/table_padding_default" />

    <TextView
        android:id="@+id/itemQuantity1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/item_quantity_layout_weight"
        android:gravity="center"
        android:padding="@dimen/table_padding_default" />

    <TextView
        android:id="@+id/itemExtra1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/item_extra_layout_weight"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="@integer/item_extra_max_length"
        android:maxLines="@integer/item_extra_max_line"
        android:padding="@dimen/table_padding_default" />

    <ImageButton
        android:id="@+id/itemPlus1"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:background="@null"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="@dimen/table_padding_default"
        android:scaleType="centerInside"
        android:src="@drawable/blue_plus" />

    <ImageButton
        android:id="@+id/itemMinus1"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:background="@null"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="@dimen/table_padding_default"
        android:scaleType="centerInside"
        android:src="@drawable/blue_minus" />
</LinearLayout>